doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' type='text/css' href='../stylesheets/body.css')
        link(rel='stylesheet' type='text/css' href='../stylesheets/navbar.css')
        link(rel='stylesheet' type='text/css' href='../stylesheets/form.css')
        title DID
    body
        div.navbar
            a.navbar-item.navbar-item-left(href='/did/index') DID
            a.navbar-item.navbar-item-right(href='/did/manage') Manage
            a.navbar-item.navbar-item-right(href='/did/register') Register
        form.form(action='/did/register' method='post')
            h3.form-title Register Decentralized Identity
            select.form-select#type(name='type')
                option(value='0') -- Please Select a Type --
                option(value='1') Person 
                option(value='2') Organization
            input.form-input#id(type='text' name='id' placeholder='id_num / org_num' required='')
            input.form-input#address(type='text' name='address' placeholder='address' required='' readonly='')
            button.form-button.form-metamask-button-color(type='button' onclick='getAddress();') get metamask account
            button.form-button.form-button-color(type='button' onclick='register();') register
        br
        br
        br
    script(src='../javascripts/web3.bundle.js')
    script(src='../javascripts/did_register.js')
