doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' type='text/css' href='../stylesheets/body.css')
        link(rel='stylesheet' type='text/css' href='../stylesheets/navbar.css')
        link(rel='stylesheet' type='text/css' href='../stylesheets/form.css')
        title DNA-SHARING-CHAIN
    body
        div.navbar
            a.navbar-item.navbar-item-left(href='/app/index') DNA-SHARING-CHAIN
            a.navbar-item.navbar-item-right(href='/app/download') Download
            a.navbar-item.navbar-item-right(href='/app/upload') Upload
            a.navbar-item.navbar-item-right(href='/app/manage') Manage
            a.navbar-item.navbar-item-right(href='/app/register') Register
        form.form
            h3.form-title Register
            select.form-select#type(name='type')
                option(value='0') -- Please Select a Type --
                option(value='patient') Patient 
                option(value='research_institute') Research Institute
            input.form-input#address(type='text' name='address' placeholder='address' hidden readonly='')
            input.form-input#message(type='text' name='message' placeholder='message' value='APP_REGISTER' hidden readonly='')
            input.form-input#signature(type='text' name='signature' placeholder='signature' required readonly='')
            button.form-button.form-metamask-button-color(type='button' onclick='getSignature();') sign 
            br
            br
            input.form-input#app-encrypted-csr(type='text' name='app_encrypted_csr' placeholder='app_encrypted_csr' readonly='')
            button.form-button.form-metamask-button-color(type='button' onclick='getCsr();') provide
            br
            br
            button.form-button.form-button-color(type='button' onclick='register();') register
        br
        br
        br
    script(src='../javascripts/web3.bundle.js')
    script(src='../javascripts/eth_sig_util.bundle.js')
    script(src='../javascripts/app_register.js')
    script(src='../javascripts/IdentityManager.abi.js')
    script(src='../javascripts/Identity.abi.js')
    script(src='../javascripts/did_config.js')