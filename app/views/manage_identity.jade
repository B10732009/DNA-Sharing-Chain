doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' type='text/css' href='stylesheets/manage_identity.css')
  link(rel='stylesheet' type='text/css' href='stylesheets/navbar.css')
  link(rel='stylesheet' type='text/css' href='stylesheets/form.css')
  title DNASSSYSTEM
  script(src='https://cdn.jsdelivr.net/npm/web3@1.5.3/dist/web3.min.js')
  script(src='javascripts/manage_identity.js')
.navbar
  a.navbar-item.navbar-item-left(href='/') DNASSSYSTEM
  a.navbar-item.navbar-item-right(href='/manage_identity') Manage Identity
  a.navbar-item.navbar-item-right(href='/apply_identity') Apply Identity
  a.navbar-item.navbar-item-right(href='/register') Register
p#user-id userId
p#identity-address identityAddress
p#user-role userRole
.form
  p Identity Infos
  form(action='/' method='post')
    input(type='text' name='username' placeholder='username' required='')
    input(type='text' name='id' placeholder='id number' required='')
    input#address(type='text' name='address' placeholder='address' required='' readonly='')
    button(type='button' onclick='connect();') connect to metamask
    div
      input(type='radio' name='role' value='1')
      label(for='role') patient
      input(type='radio' name='role' value='2')
      label(for='role') hospital
      input(type='radio' name='role' value='3')
      label(for='role') research center
    input(type='submit' name='apply' value='apply')