doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' type='text/css' href='../stylesheets/body.css')
        link(rel='stylesheet' type='text/css' href='../stylesheets/navbar.css')
        link(rel='stylesheet' type='text/css' href='../stylesheets/form.css')
        title DID
    body
        div.navbar
            a.navbar-item.navbar-item-left(href='/did/index') DID 
            a.navbar-item.navbar-item-right(href='/did/manage') Manage
            a.navbar-item.navbar-item-right(href='/did/register') Register
        form.form
            h3.form-title Decentralized Identity Infos
            input.form-input#identity-info-type(type='text' name='type' placeholder='type' required='' readonly='')
            input.form-input#identity-info-id(type='text' name='id' placeholder='id_num / org_num' required='' readonly='')
            input.form-input#identity-info-identity-contract-address(type='text' name='identity-contract-address' placeholder='identity_contract_address' required='' readonly='')
            button.form-button.form-button-color(type='button' onclick='getInfos();') show
        form.form
            h3.form-title Upload Encrypted Data
            input.form-input#upload-encrypted-data-name(type='text' name='name' placeholder='name' required='')
            input.form-input#upload-encrypted-data-data(type='file' name='data' placeholder='data' required='')
            button.form-button.form-button-color(type='button' onclick='uploadEncryptedData();') encrypt & upload
        form.form
            h3.form-title Download Encrypted Data
            input.form-input#download-encrypted-data-name(type='text' name='name' placeholder='name' required='')
            input.form-input#download-encrypted-data-data(type='text' name='data' placeholder='data' required='')
            button.form-button.form-button-color(type='button' onclick='downloadEncryptedData();') download & decrypt
        br
        br
        br 
